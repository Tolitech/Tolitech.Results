root = true

# All files
[*]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = crlf
insert_final_newline = false
charset = utf-8-bom

# .NET Core coding conventions
[*.cs]
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

# Enforce all diagnostics as errors
dotnet_analyzer_diagnostic.severity = error
dotnet_diagnostic.severity = error

# IDE0058: Expression value is never used
csharp_style_unused_value_expression_statement_preference = discard_variable

# IDE0160: Convert to block scoped namespace
csharp_style_namespace_declarations = file_scoped

# CA1008: Enums should have zero value
dotnet_diagnostic.CA1008.severity = silent

# CA1031: Do not catch general exception types
dotnet_diagnostic.CA1031.severity = silent

# CA1034: Nested types should not be visible
dotnet_diagnostic.CA1034.severity = silent

# CA1040: Avoid empty interfaces
dotnet_diagnostic.CA1040.severity = silent

# SA1633: File should have header
dotnet_diagnostic.SA1633.severity = silent

# CA1707: Identifiers should not contain underscores
dotnet_diagnostic.CA1707.severity = silent

# CA2201: Do not raise reserved exception types
dotnet_diagnostic.CA2201.severity = silent

# IDE0058: Expression value is never used
dotnet_diagnostic.IDE0058.severity = silent

# SA1101: Prefix local calls with this
dotnet_diagnostic.SA1101.severity = silent

# SA1200: Using directives should be placed correctly
dotnet_diagnostic.SA1200.severity = silent

# SA1309: Field names should not begin with underscore
dotnet_diagnostic.SA1309.severity = silent